{
  "name": "zlremote",
  "version": "1.0.0",
  "description": "Professional zero-latency remote desktop application",
  "private": true,
  "workspaces": [
    "server",
    "desktop",
    "mobile",
    "web"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:desktop\" \"npm run dev:web\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:desktop": "npm run dev --workspace=desktop",
    "dev:web": "npm run dev --workspace=web",
    "dev:mobile": "npm run start --workspace=mobile",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "clean": "rimraf dist node_modules/*/node_modules",
    "docker:build": "docker-compose -f deploy/docker-compose.yml build",
    "docker:up": "docker-compose -f deploy/docker-compose.yml up -d",
    "release": "npm run build && npm run docker:build",
    "setup": "node scripts/setup.js",
    "mobile": "cd mobile && npx react-native start",
    "dev:safe": "node scripts/dev-safe.js",
    "fix": "node scripts/fix-types.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
