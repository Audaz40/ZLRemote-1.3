{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "./shared/*"
      ],
      "@server/*": [
        "./server/src/*"
      ],
      "@web/*": [
        "./web/src/*"
      ],
      "@desktop/*": [
        "./desktop/src/*"
      ],
      "@mobile/*": [
        "./mobile/src/*"
      ]
    }
  },
  "include": [
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/node_modules",
    "**/dist",
    "**/build"
  ]
}